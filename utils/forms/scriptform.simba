  Result := Self.Tabs[High(Self.Tabs)];

  fullWidth := Floor(Self.Size.X/10);
  space := Floor(fullWidth * 0.1);
  w := Floor(fullWidth * 3.7);
  y := Floor(Self.Size.Y/10);

  with info do
  begin
