  fullWidth := Floor(Self.Size.X/3);
  space := Floor(fullWidth * 0.1);
  w := Floor(fullWidth - space * 2);
  y := Floor(Self.Size.Y/2.5);

  case consumableType of
    FOOD_CONSUMABLE:
      begin
        typeStr := 'Food';
        itemArray := FOOD_ARRAY;
      end;

    PRAYER_CONSUMABLE:
      begin
        typeStr := 'Prayer';
        itemArray := PRAYER_ARRAY;
      end;

    ENERGY_CONSUMABLE:
      begin
        typeStr := 'Energy';
        itemArray := ENERGY_ARRAY;
      end;

    BOOST_CONSUMABLE:
