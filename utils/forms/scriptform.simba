    + LINEENDING + 'Only valid UUID v4 are accepted.');

    SetLeft(w + space * 2);
    SetTop(uuid.GetTop());
    SetWidth(w);
    SetMaxLength(36);
    Edit.setOnChange(@Self._NewUUIDOnChange);
  end;

  with updateUUID do
